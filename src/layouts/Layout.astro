---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Grupo Scout Hipocampo 503 - San Pedro del Pinatar',
  description = 'Grupo Scout Hipocampo 503 en San Pedro del Pinatar, Murcia. Educación en valores a través del escultismo para niños y jóvenes de 6 a 21 años.'
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="scouts, grupo scout, hipocampo 503, san pedro del pinatar, murcia, asde, escultismo, educación" />
    <meta name="author" content="Grupo Scout Hipocampo 503" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Grupo Scout Hipocampo 503" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href={`${import.meta.env.BASE_URL}/favicon.png`} />

    <!-- Preconnect para optimización -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* Estilos adicionales específicos si es necesario */
  html {
    scroll-padding-top: 80px; /* Para compensar el header fijo */
  }

  /* Animación de scroll suave */
  @media (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }
</style>
